<%= render 'layouts/users_header' %>
<%= render 'layouts/users_sidebar' %>
<%= devise_error_messages! %>
<div class = "signin-body">
<span class = "login-message">.ideas</span>
<span class = "login-message2">にログイン</span>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, class: "signin-field",placeholder: "メールアドレス" %>
  </div>

  <div class="field">
    <%= f.password_field :password, class: "signin-field",placeholder: "パスワード" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class: "remember_me" %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit ".ideasにログイン", class: "signin-btn" %>
  </div>
<% end %>
</div>

<%= render 'layouts/users_footer' %>